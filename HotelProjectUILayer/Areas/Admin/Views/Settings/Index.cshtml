@model UserEditViewModel
<h1>Profil Bilgileri Ve Şifre Güncelleme</h1>
<form method="post">
    <div class="form-group">
        <label>Adınız</label>
        <input class="form-control" type="text" asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Soyadı</label>
        <input class="form-control" type="text" asp-for="Surname" />
    </div>
    <div class="form-group">
        <label>Şehir</label>
        <input class="form-control" type="text" asp-for="City" />
    </div>
    <div class="form-group">
        <label>Ülke</label>
        <input class="form-control" type="text" asp-for="Country" />
    </div>
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input class="form-control" type="text" asp-for="Username" />
    </div>
    <div class="form-group">
        <label>E Posta Adresiniz</label>
        <input class="form-control" type="email" asp-for="Email" />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input class="form-control" type="password" asp-for="Password" />
    </div>
    <div class="form-group">
        <label>Şifre Tekrarı</label>
        <input class="form-control" type="password" asp-for="ConfirmPassword" />
    </div>
    <button class="btn btn-outline-success" type="submit">Bilgileri Güncelle</button>
</form>