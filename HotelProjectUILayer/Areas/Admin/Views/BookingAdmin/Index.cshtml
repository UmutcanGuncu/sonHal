@model List<ResultBookingDto>
@{
    int count = 0;
}


            <div class="card-title">
                <h4>Rezervasyonlar</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                            <th>Beklet</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                                    {
                                        count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.name</td>
                                <td>@item.checkIn</td>
                                <td>@item.checkOut</td>
                                <td class="color-primary"> <span class="badge badge-primary px-2">@item.status</span></td>
                                <td><a href="/Admin/BookingAdmin/ApproveBooking/@item.id" class="btn btn-outline-primary">Onayla</a></td>
                                <td><a href="/Admin/BookingAdmin/CancelBooking/@item.id" class="btn btn-outline-danger">İptal Et</a></td>
                                <td><a href="/Admin/BookingAdmin/WaitBooking/@item.id" class="btn btn-outline-warning">Beklet</a></td>
                                <td><a href="/Admin/BookingAdmin/UpdateBooking/@item.id" class="btn btn-outline-info">Güncelle</a></td>
                                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
       
