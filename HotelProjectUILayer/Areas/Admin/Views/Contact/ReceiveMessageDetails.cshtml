@model ReceiveMessageByIdDto
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="email-left-box">
                    @await Html.PartialAsync("_SideBarContactPartial")
                    <h5 class="mt-5 m-b-10">Categories</h5>
                    @await Html.PartialAsync("_SideBarContactCategoryPartial")
                </div>
                <div class="email-right-box">
                    <div role="toolbar" class="toolbar">
                        <div class="btn-group">
                            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                                Gelen Mesajlar <span class="caret m-l-5"></span>
                            </button>

                        </div>
                    </div>



                    <div class="read-content">
                        <div class="media pt-5">
                            <img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/1.jpg">
                            <div class="media-body">
                                <h5 class="m-b-3">@Model.name</h5>
                                <p class="m-b-2">@(((DateTime)Model.date).ToString("dd-MMM-yyyy"))</p>
                            </div>

                        </div>
                        <hr>
                        <div class="media mb-4 mt-1">
                            <div class="media-body">

                                <h4 class="m-0 text-primary">@Model.subject</h4><small class="text-muted">Kime: @Model.mail</small>
                            </div>
                        </div>

                        <p>@Model.message</p>
                        <hr>

                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
