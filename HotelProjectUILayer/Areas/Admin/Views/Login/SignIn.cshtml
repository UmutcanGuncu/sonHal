@model LoginDto
@section Scripts{

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="login-form-bg h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">

                            <a class="text-center" href="index.html"> <h4>Giriş Sayfası</h4></a>
                            <div class="alert alert-info" role="alert">
                                @ViewBag.Deneme
                            </div>
                            <form method="post" class="mt-5 mb-5 login-input">
                               
                                
                                <div class="form-group">
                                    <input type="text" class="form-control" asp-for="Email" placeholder="E Posta Adresiniz" required>
                                    <span asp-validation-for="Email"></span>
                                </div>
                                
                                
                                <div class="form-group">
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                               
                                <button class="btn login-form__btn submit w-100">Giriş Yap</button>
                            </form>
                            <p class="mt-5 login-form__footer">Hesabınız Yok Mu <a href="/Admin/Login/SignUp" class="text-primary">Kayıt Olun </a> </p>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
