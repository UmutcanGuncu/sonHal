@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_Head");

<body>
    @await Component.InvokeAsync("_Navbar");
    <!-- Header End -->
    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5">
        <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="~/hotel-html-template/img/carousel-1.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 700px;">
                            <h6 class="section-title text-white text-uppercase mb-3 animated slideInDown">Her Şey Dahil Paketler</h6>
                            <h1 class="display-3 text-white mb-4 animated slideInDown">Eşsiz Deniz Ve Orman Manzarası</h1>
                            <a href="/Room/Index" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Odalarımız</a>
                            <a href="/Booking/Index" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Rezervasyon Yap</a>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/hotel-html-template/img/carousel-2.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 700px;">
                            <h6 class="section-title text-white text-uppercase mb-3 animated slideInDown">Her Şey Dahil Paketler</h6>
                            <h1 class="display-3 text-white mb-4 animated slideInDown">Eşsiz Deniz Ve Orman Manzarası</h1>
                            <a href="/Room/Index" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Odalarımız</a>
                            <a href="/Booking/Index" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Rezervasyon Yap</a>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <!-- Carousel End -->
    <!-- Booking Start -->

    <!-- Booking End -->
    <!-- About Start -->
    @await Component.InvokeAsync("_AboutUs");
    <!-- About End -->
    <!-- Room Start -->
    @await Component.InvokeAsync("_OurRoom");
    <!-- Room End -->
    <!-- Video Start -->
    <div class="container-xxl py-5 px-0 wow zoomIn" data-wow-delay="0.1s">
        <div class="row g-0">
            <div class="col-md-6 bg-dark d-flex align-items-center">
                <div class="p-5">
                    <h6 class="section-title text-start text-white text-uppercase mb-3">Huzur Dolu Bir Tatil</h6>
                    <h1 class="text-white mb-4">Otelimizi Keşfetmeye Davetlisiniz</h1>
                    <p class="text-white mb-4">Huzur dolu bi tatil için sizi otelimize bekliyoruz. Otelimizde geçireceğiniz her dakikanın güzel olması için elimizden geleni yapacağız.</p>
                    <a href="/Room/Index" class="btn btn-primary py-md-3 px-md-5 me-3">Odalarımız</a>
                    <a href="/Booking/Index" class="btn btn-light py-md-3 px-md-5">Rezervasyon Yap</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="video">
                    <button type="button" class="btn-play" data-bs-toggle="modal" data-src="https://www.youtube.com/embed/DWRcNpR6Kdc" data-bs-target="#videoModal">
                        <span></span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Youtube Video</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- 16:9 aspect ratio -->
                    <div class="ratio ratio-16x9">
                        <iframe class="embed-responsive-item" src="" id="video" allowfullscreen allowscriptaccess="always"
                                allow="autoplay"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Video Start -->
    <!-- Service Start -->
    @await Component.InvokeAsync("_Services");
    <!-- Service End -->
    <!-- Testimonial Start -->
    @await Component.InvokeAsync("_Testimonial");
    <!-- Testimonial End -->
    <!-- Team Start -->
    @await Component.InvokeAsync("_Staff");
    <!-- Team End -->
    <!-- Newsletter Start -->
    
    <!-- Newsletter Start -->
    <!-- Footer Start -->
    @await Component.InvokeAsync("_Footer");
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
   

    @await Component.InvokeAsync("_Script");
</body>

</html>